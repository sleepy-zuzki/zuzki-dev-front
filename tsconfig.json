/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "types": [
      "./worker-configuration.d.ts"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@core/*": ["src/app/core/*"],
      "@domain/*": ["src/app/core/domain/*"],
      "@domain/entities/*": ["src/app/core/domain/entities/*"],
      "@domain/interfaces/*": ["src/app/core/domain/interfaces/*"],
      "@domain/enums/*": ["src/app/core/domain/enums/*"],
      "@domain/repositories/*": ["src/app/core/domain/repositories/*"],
      "@domain/services/*": ["src/app/core/domain/services/*"],
      "@domain/value-objects/*": ["src/app/core/domain/value-objects/*"],
      "@domain/events/*": ["src/app/core/domain/events/*"],
      "@application/*": ["src/app/application/*"],
      "@application/dtos/*": ["src/app/application/dtos/*"],
      "@application/use-cases/*": ["src/app/application/use-cases/*"],
      "@application/ports/*": ["src/app/application/ports/*"],
      "@infrastructure/*": ["src/app/infrastructure/*"],
      "@infrastructure/adapters/*": ["src/app/infrastructure/adapters/*"],
      "@infrastructure/config/*": ["src/app/infrastructure/config/*"],
      "@features/*": ["src/app/features/*"],
      "@shared/*": ["src/app/shared/*"],
      "@pages/*": ["src/app/pages/*"],
      "@environments/*": ["src/environments/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/app/shared/components/*"],
      "@directives/*": ["src/app/shared/directives/*"],
      "@services/*": ["src/app/shared/services/*"],
      "@interceptors/*": ["src/app/shared/interceptors/*"],
      "@pipes/*": ["src/app/shared/pipes/*"],
      "@ui": ["src/app/shared/components/ui/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
